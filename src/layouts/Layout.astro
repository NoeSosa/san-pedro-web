---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">
		<header class="bg-white shadow-md fixed w-full z-50 top-0">
			<div
				class="container mx-auto px-6 py-4 flex justify-between items-center relative"
			>
				<a
					href="/"
					class="text-2xl font-bold text-gob-primary flex items-center gap-2 z-50"
				>
					San Pedro <span class="text-gob-accent">Huamelula</span>
				</a>

				<nav
					class="hidden md:flex space-x-8 font-medium text-gray-600 items-center"
				>
					<a href="/#inicio" class="hover:text-gob-accent transition"
						>Inicio</a
					>
					<a
						href="/#tradicion"
						class="hover:text-gob-accent transition">Tradición</a
					>
					<a href="/cabildo" class="hover:text-gob-accent transition">
						Cabildo
					</a>
					<a
						href="/transparencia"
						class="hover:text-gob-accent transition"
					>
						Transparencia
					</a>
					<a
						href="/tramites"
						class="bg-gob-primary text-white px-4 py-2 rounded hover:bg-blue-900 transition shadow-md"
					>
						Trámites
					</a>
				</nav>

				<button
					id="menu-btn"
					class="block md:hidden text-gob-primary focus:outline-none z-50"
				>
					<svg
						class="w-8 h-8"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>

			<div
				id="mobile-menu"
				class="hidden absolute top-full left-0 w-full bg-white shadow-lg border-t border-gray-100 md:hidden flex-col items-center py-6 space-y-4 font-medium text-lg text-gob-primary animate-fade-in-down"
			>
				<a href="/#inicio" class="mobile-link hover:text-gob-accent"
					>Inicio</a
				>
				<a href="/#tradicion" class="mobile-link hover:text-gob-accent"
					>Tradición</a
				>
				<a href="/cabildo" class="mobile-link hover:text-gob-accent">
					Cabildo</a
				>
				<a
					href="/transparencia"
					class="mobile-link hover:text-gob-accent"
				>
					Transparencia</a
				>
				<a
					href="/tramites"
					class="mobile-link bg-gob-primary text-white px-6 py-2 rounded-full"
					>Trámites</a
				>
			</div>
		</header>

		<main class="flex-grow mt-16">
			<slot />
		</main>

		<div
			class="bg-gray-800 text-white py-10 border-t-4 border-red-600 relative overflow-hidden"
		>
			<div
				class="absolute inset-0 opacity-5 bg-[radial-gradient(#ef4444_1px,transparent_1px)] [background-size:16px_16px]"
			>
			</div>

			<div class="container mx-auto px-6 relative z-10">
				<div
					class="flex flex-col md:flex-row items-center justify-between gap-8"
				>
					<div class="text-center md:text-left">
						<h3
							class="text-2xl font-bold flex items-center justify-center md:justify-start gap-3 mb-2"
						>
							<span
								class="bg-red-600 p-2 rounded-full animate-pulse"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-6 w-6 text-white"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
									></path>
								</svg>
							</span>
							Números de Emergencia
						</h3>
						<p class="text-gray-400">
							Atención ciudadana las 24 horas del día.
						</p>
					</div>

					<div
						class="grid grid-cols-1 sm:grid-cols-3 gap-6 w-full md:w-auto"
					>
						<a
							href="tel:911"
							class="group bg-gray-700/50 hover:bg-red-600/90 transition-colors p-4 rounded-xl flex items-center gap-4 border border-gray-600 hover:border-red-500"
						>
							<div
								class="bg-white/10 p-3 rounded-lg group-hover:bg-white/20 transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-6 w-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
									></path>
								</svg>
							</div>
							<div>
								<p
									class="text-xs text-gray-400 uppercase font-bold tracking-wider group-hover:text-white/80"
								>
									Seguridad
								</p>
								<p class="text-lg font-bold font-mono">911</p>
							</div>
						</a>

						<a
							href="tel:1234567890"
							class="group bg-gray-700/50 hover:bg-orange-500/90 transition-colors p-4 rounded-xl flex items-center gap-4 border border-gray-600 hover:border-orange-400"
						>
							<div
								class="bg-white/10 p-3 rounded-lg group-hover:bg-white/20 transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-6 w-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
									></path>
								</svg>
							</div>
							<div>
								<p
									class="text-xs text-gray-400 uppercase font-bold tracking-wider group-hover:text-white/80"
								>
									Protección Civil
								</p>
								<p class="text-lg font-bold font-mono">
									(9XX) 123-4567
								</p>
							</div>
						</a>

						<a
							href="tel:1234567890"
							class="group bg-gray-700/50 hover:bg-blue-500/90 transition-colors p-4 rounded-xl flex items-center gap-4 border border-gray-600 hover:border-blue-400"
						>
							<div
								class="bg-white/10 p-3 rounded-lg group-hover:bg-white/20 transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="h-6 w-6"
									fill="none"
									viewBox="0 0 24 24"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
									></path>
								</svg>
							</div>
							<div>
								<p
									class="text-xs text-gray-400 uppercase font-bold tracking-wider group-hover:text-white/80"
								>
									Ambulancia
								</p>
								<p class="text-lg font-bold font-mono">
									(9XX) 987-6543
								</p>
							</div>
						</a>
					</div>
				</div>
			</div>
		</div>

		<footer class="bg-gob-primary text-white pt-16 pb-8">
			<div class="container mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
					<div>
						<h4
							class="text-2xl font-bold mb-4 flex items-center gap-2"
						>
							San Pedro <span class="text-gob-accent"
								>Huamelula</span
							>
						</h4>
						<p class="text-gray-300 text-sm leading-relaxed mb-6">
							Gobierno municipal comprometido con la tradición, el
							progreso y el bienestar de nuestra comunidad
							chontal.
						</p>
						<div class="flex gap-4">
							<a
								href="#"
								class="bg-white/10 p-2 rounded-full hover:bg-gob-accent hover:text-gob-primary transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="currentColor"
									><path
										d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
									></path></svg
								>
							</a>
							<a
								href="#"
								class="bg-white/10 p-2 rounded-full hover:bg-gob-accent hover:text-gob-primary transition"
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="currentColor"
									><path
										d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
									></path></svg
								>
							</a>
						</div>
					</div>

					<div>
						<h4
							class="text-lg font-bold text-gob-accent mb-6 uppercase tracking-wider"
						>
							Enlaces Rápidos
						</h4>
						<ul class="space-y-3 text-gray-300 text-sm">
							<li>
								<a
									href="/cabildo"
									class="hover:text-white transition"
									>H. Cabildo</a>
							</li>
							<li>
								<a
									href="/transparencia"
									class="hover:text-white transition"
									>Portal de Transparencia</a>
							</li>
							<li>
								<a
									href="/tramites"
									class="hover:text-white transition"
									>Trámites y Servicios</a>
							</li>
							<li>
								<a
									href="/noticias"
									class="hover:text-white transition"
									>Sala de Prensa</a>
							</li>
						</ul>
					</div>

					<div>
						<h4
							class="text-lg font-bold text-gob-accent mb-6 uppercase tracking-wider"
						>
							Contacto
						</h4>
						<p class="text-gray-300 text-sm mb-3">
							Palacio Municipal S/N, Centro
						</p>
						<p class="text-gray-300 text-sm mb-3">
							San Pedro Huamelula, Oax.
						</p>
						<p class="text-gray-300 text-sm mb-3">
							Tel: (9XX) 123-4567
						</p>
						<p class="text-gray-300 text-sm">
							contacto@huamelula.gob.mx
						</p>
					</div>
				</div>

				<div
					class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-400"
				>
					<p>&copy; 2025 H. Ayuntamiento de San Pedro Huamelula.</p>
					<div class="flex gap-6">
						<a
							href="/privacidad"
							class="hover:text-white transition"
							>Aviso de Privacidad</a
						>
						<a href="#" class="hover:text-white transition"
							>Mapa del Sitio</a
						>
					</div>
				</div>
			</div>
		</footer>

		<script>
			const btn = document.getElementById("menu-btn");
			const menu = document.getElementById("mobile-menu");
			const links = document.querySelectorAll(".mobile-link");

			// Al hacer clic en el botón, mostrar/ocultar menú
			btn?.addEventListener("click", () => {
				menu?.classList.toggle("hidden");
				menu?.classList.toggle("flex");
			});

			// Al hacer clic en un enlace, cerrar el menú automáticamente
			links.forEach((link) => {
				link.addEventListener("click", () => {
					menu?.classList.add("hidden");
					menu?.classList.remove("flex");
				});
			});
		</script>
	</body>
</html>
