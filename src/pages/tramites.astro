---

<Layout title="Trámites y Servicios | San Pedro Huamelula">
    <div class="relative bg-gob-primary text-white py-20 overflow-hidden">
        <div
            class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"
        >
        </div>
        <div class="container mx-auto px-6 relative z-10 text-center">
            <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-4">
                Trámites y Servicios
            </h1>
            <p class="text-gob-accent text-xl font-medium max-w-2xl mx-auto">
                Tu guía oficial para realizar gestiones municipales de manera
                clara y eficiente.
            </p>
        </div>
    </div>

    <div class="bg-gray-50 min-h-screen pb-20">
        <div class="container mx-auto px-6 -mt-10 relative z-20">
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto mb-16"
            >
                <div
                    class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-gob-accent flex items-center gap-6 hover:shadow-xl transition-shadow"
                >
                    <div class="bg-orange-50 p-3 rounded-full text-gob-accent">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="text-lg font-bold text-gob-primary uppercase tracking-wide"
                        >
                            Horario de Atención
                        </h3>
                        <p class="text-gray-600 font-medium">Lunes a Viernes</p>
                        <p class="text-xl font-bold text-gray-800">
                            9:00 AM - 4:00 PM
                        </p>
                        <p class="text-gray-600 font-medium mt-1">Sábados</p>
                        <p class="text-xl font-bold text-gray-800">
                            9:00 AM - 1:00 PM
                        </p>
                    </div>
                </div>

                <div
                    class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500 flex items-center gap-6 hover:shadow-xl transition-shadow"
                >
                    <div class="bg-red-50 p-3 rounded-full text-red-500">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h3
                            class="text-lg font-bold text-gray-800 uppercase tracking-wide"
                        >
                            Código de Acceso
                        </h3>
                        <p class="text-gray-600">Requisito obligatorio:</p>
                        <p class="font-bold text-red-600 text-lg">
                            Pantalón largo para caballeros
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex flex-col lg:flex-row gap-12">
                <aside class="hidden lg:block w-1/4">
                    <div
                        class="sticky top-24 bg-white rounded-xl shadow-md p-6 border border-gray-100"
                    >
                        <h3
                            class="text-lg font-bold text-gob-primary mb-4 border-b pb-2"
                        >
                            Departamentos
                        </h3>
                        <nav class="space-y-2">
                            {
                                areas.map((area) => (
                                    <a
                                        href={`#${area.id}`}
                                        class="flex items-center gap-3 p-3 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-gob-primary transition-colors group"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-5 w-5 text-gray-400 group-hover:text-gob-accent transition-colors"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d={area.icon}
                                            />
                                        </svg>
                                        <span class="font-medium">
                                            {area.nombre
                                                .replace("Regiduría de ", "")
                                                .replace("Secretaría ", "")}
                                        </span>
                                    </a>
                                ))
                            }
                        </nav>
                    </div>
                </aside>

                <main class="w-full lg:w-3/4 space-y-12">
                    <div class="mb-8">
                        <div class="relative">
                            <input
                                type="text"
                                id="search-tramites"
                                placeholder="Buscar trámite o servicio..."
                                class="w-full pl-12 pr-4 py-3 rounded-xl border border-gray-200 focus:border-gob-accent focus:ring-2 focus:ring-gob-accent/20 outline-none transition-all shadow-sm text-gray-700"
                            />
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-gray-400 absolute left-4 top-1/2 transform -translate-y-1/2"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>

                    {
                        areas.map((area) => (
                            <div id={area.id} class="scroll-mt-28 area-section">
                                {" "}
                                <div class="flex items-center gap-4 mb-6">
                                    <div class="bg-gob-primary text-white p-3 rounded-lg shadow-md">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-8 w-8"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d={area.icon}
                                            />
                                        </svg>
                                    </div>
                                    <h2 class="text-3xl font-bold text-gray-800">
                                        {area.nombre}
                                    </h2>
                                </div>
                                <div class="grid grid-cols-1 gap-4">
                                    {area.tramites.map((tramite) => (
                                        <details class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all duration-300 group tramites-item">
                                            <summary class="p-6 cursor-pointer list-none flex items-center justify-between">
                                                <h3 class="text-lg font-bold text-gob-primary group-hover:text-gob-accent transition-colors tramite-nombre">
                                                    {tramite.nombre}
                                                </h3>
                                                <span class="bg-blue-50 text-gob-primary p-2 rounded-full group-open:rotate-180 transition-transform duration-300">
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="h-5 w-5"
                                                        viewBox="0 0 20 20"
                                                        fill="currentColor"
                                                    >
                                                        <path
                                                            fill-rule="evenodd"
                                                            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                            clip-rule="evenodd"
                                                        />
                                                    </svg>
                                                </span>
                                            </summary>

                                            <div class="px-6 pb-6 pt-0 border-t border-gray-50">
                                                <div class="mt-4 bg-blue-50/50 rounded-lg p-4">
                                                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 flex items-center gap-1">
                                                        <svg
                                                            xmlns="http://www.w3.org/2000/svg"
                                                            class="h-4 w-4 flex-shrink-0"
                                                            width="16"
                                                            height="16"
                                                            viewBox="0 0 20 20"
                                                            fill="currentColor"
                                                        >
                                                            <path
                                                                fill-rule="evenodd"
                                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                                clip-rule="evenodd"
                                                            />
                                                        </svg>
                                                        Requisitos
                                                    </p>
                                                    <ul class="space-y-2">
                                                        {tramite.requisitos.map(
                                                            (req) => (
                                                                <li class="flex items-start gap-2 text-sm text-gray-700">
                                                                    <span class="mt-1.5 w-1.5 h-1.5 bg-gob-accent rounded-full flex-shrink-0" />
                                                                    {req}
                                                                </li>
                                                            ),
                                                        )}
                                                    </ul>
                                                </div>
                                            </div>
                                        </details>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </main>
            </div>
        </div>
    </div>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const searchInput = document.getElementById(
            "search-tramites",
        ) as HTMLInputElement;
        const areaSections = document.querySelectorAll(".area-section");

        if (searchInput) {
            searchInput.addEventListener("input", (e) => {
                const searchTerm = (e.target as HTMLInputElement).value
                    .toLowerCase()
                    .normalize("NFD")
                    .replace(/[\u0300-\u036f]/g, "");

                areaSections.forEach((section) => {
                    const tramites = section.querySelectorAll(".tramites-item");
                    let hasVisibleTramites = false;

                    tramites.forEach((tramite) => {
                        const nombre =
                            tramite
                                .querySelector(".tramite-nombre")
                                ?.textContent?.toLowerCase()
                                .normalize("NFD")
                                .replace(/[\u0300-\u036f]/g, "") || "";

                        if (nombre.includes(searchTerm)) {
                            (tramite as HTMLElement).style.display = "block";
                            hasVisibleTramites = true;
                        } else {
                            (tramite as HTMLElement).style.display = "none";
                        }
                    });

                    // Mostrar u ocultar la sección completa si no tiene trámites visibles
                    (section as HTMLElement).style.display = hasVisibleTramites
                        ? "block"
                        : "none";
                });
            });
        }
    });
</script>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>
