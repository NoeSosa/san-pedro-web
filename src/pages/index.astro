---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import TraditionCarousel from "../components/TraditionCarousel.jsx"; // Importar carrusel
import { getCollection } from "astro:content"; // Importar función para leer datos
// 1. OBTENER DATOS
const allNoticias = await getCollection("noticias");

// 2. ORDENAR POR FECHA (Más recientes primero)
const noticiasOrdenadas = allNoticias.sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

// 3. OBTENER ETIQUETAS (Para pintar los colores)
const allTags = await getCollection("etiquetas");
const tagMap = new Map(allTags.map((tag) => [tag.id, tag.data]));

// 4. SEPARAR DESTACADAS VS NORMALES
const destacadas = noticiasOrdenadas
	.filter((n) => n.data.isFeatured)
	.slice(0, 5); // Máximo 5 destacadas
const ultimasNoticias = noticiasOrdenadas
	.filter((n) => !n.data.isFeatured)
	.slice(0, 6); // 6 normales

// Función auxiliar para formatear fecha
const formatDate = (date) => {
	return new Intl.DateTimeFormat("es-MX", {
		day: "numeric",
		month: "long",
		year: "numeric",
	}).format(date);
};

// Leer las tradiciones que creaste en el panel /keystatic
const tradiciones = await getCollection("tradiciones");
---

<Layout title="San Pedro Huamelula | Tradición y Progreso">
	<section
		id="inicio"
		class="relative h-[85vh] flex items-center justify-center bg-gray-800 overflow-hidden"
	>
		<div class="absolute inset-0 z-0">
			<img
				src="San_Pedro_Huamelula.jpg"
				alt="Fondo"
				class="w-full h-full object-cover opacity-50"
			/>
		</div>

		<div
			class="relative z-10 text-center px-4 max-w-4xl mx-auto text-white"
		>
			<h1
				class="text-4xl md:text-6xl font-bold mb-6 leading-tight drop-shadow-lg"
			>
				Bienvenidos a la <span class="text-gob-accent"
					>Tierra Chontal</span
				>
			</h1>
			<p class="text-lg md:text-xl mb-8 text-gray-100 drop-shadow-md">
				Donde la tradición se une con el futuro. Gobierno cercano para
				San Pedro Huamelula.
			</p>
			<a
				href="#gobierno"
				class="bg-gob-accent text-gob-primary font-bold py-3 px-8 rounded-full text-lg hover:bg-yellow-500 hover:scale-105 transition transform inline-block shadow-lg cursor-pointer"
			>
				Conoce a tu Ayuntamiento
			</a>
		</div>
	</section>

	<section id="tradicion" class="py-20 container mx-auto px-6">
		<div class="text-center mb-8">
			<h2 class="text-3xl md:text-4xl font-bold text-gob-primary mb-4">
				Nuestra Identidad
			</h2>
			<div class="w-20 h-1 bg-gob-accent mx-auto"></div>
		</div>

		{
			tradiciones.length > 0 ? (
				<TraditionCarousel client:load tradiciones={tradiciones} />
			) : (
				<p class="text-center text-gray-500">
					No hay tradiciones cargadas en el panel aún.
				</p>
			)
		}
	</section>
	<section id="noticias" class="py-20 bg-gray-50">
		<div class="container mx-auto px-6">
			<div class="flex justify-between items-end mb-10">
				<div>
					<h2
						class="text-3xl md:text-4xl font-bold text-gob-primary mb-2"
					>
						Acciones de Gobierno
					</h2>
					<div class="w-20 h-1 bg-gob-accent"></div>
				</div>
				<a
					href="/noticias"
					class="hidden md:inline-block text-gob-primary font-bold hover:text-gob-accent transition"
				>
					Ver todas las noticias &rarr;
				</a>
			</div>

			{
				destacadas.length > 0 && (
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-16">
						<article class="relative group overflow-hidden rounded-2xl shadow-xl h-96 lg:h-[500px]">
							<img
								src={destacadas[0].data.image}
								alt={destacadas[0].data.title}
								class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition duration-700"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent" />
							<div class="absolute bottom-0 left-0 p-6 md:p-8 w-full">
								{destacadas[0].data.tags && (
									<span
										class={`inline-block px-3 py-1 rounded-full text-xs font-bold mb-3 ${tagMap.get(destacadas[0].data.tags.id)?.color || "bg-gray-100 text-gray-800"}`}
									>
										{
											tagMap.get(
												destacadas[0].data.tags.id,
											)?.name
										}
									</span>
								)}
								<h3 class="text-2xl md:text-3xl font-bold text-white mb-2 leading-tight">
									<a
										href={`/noticias/${destacadas[0].slug}`}
										class="hover:underline"
									>
										{destacadas[0].data.title}
									</a>
								</h3>
								<p class="text-gray-300 line-clamp-2 mb-4 hidden md:block">
									{destacadas[0].data.excerpt}
								</p>
								<span class="text-gray-400 text-sm">
									{formatDate(destacadas[0].data.date)}
								</span>
							</div>
						</article>

						<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
							{destacadas.slice(1).map((noticia) => (
								<article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition group flex flex-col h-full">
									<div class="h-40 overflow-hidden relative">
										<img
											src={noticia.data.image}
											class="w-full h-full object-cover group-hover:scale-110 transition duration-500"
										/>
										{noticia.data.tags && (
											<span
												class={`absolute top-3 left-3 px-2 py-1 rounded text-[10px] font-bold uppercase tracking-wide ${tagMap.get(noticia.data.tags.id)?.color}`}
											>
												{
													tagMap.get(
														noticia.data.tags.id,
													)?.name
												}
											</span>
										)}
									</div>
									<div class="p-5 flex flex-col flex-grow">
										<h4 class="font-bold text-gob-primary mb-2 line-clamp-2 leading-snug">
											<a
												href={`/noticias/${noticia.slug}`}
											>
												{noticia.data.title}
											</a>
										</h4>
										<div class="mt-auto pt-4 border-t border-gray-100 flex justify-between items-center text-xs text-gray-500">
											<span>
												{formatDate(noticia.data.date)}
											</span>
											<a
												href={`/noticias/${noticia.slug}`}
												class="text-gob-accent font-bold hover:underline"
											>
												Leer &rarr;
											</a>
										</div>
									</div>
								</article>
							))}
						</div>
					</div>
				)
			}

			<div class="mb-8">
				<h3 class="text-2xl font-bold text-gray-800 mb-6">
					Últimas Noticias
				</h3>
				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
				>
					{
						ultimasNoticias.map((noticia) => (
							<article class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:-translate-y-1 hover:shadow-md transition duration-300">
								<div class="h-48 overflow-hidden relative">
									<img
										src={noticia.data.image}
										class="w-full h-full object-cover"
									/>
								</div>
								<div class="p-6">
									<div class="flex items-center justify-between mb-3">
										{noticia.data.tags && (
											<span
												class={`px-2 py-1 rounded text-xs font-bold ${tagMap.get(noticia.data.tags.id)?.color}`}
											>
												{
													tagMap.get(
														noticia.data.tags.id,
													)?.name
												}
											</span>
										)}
										<span class="text-xs text-gray-400">
											{formatDate(noticia.data.date)}
										</span>
									</div>
									<h3 class="text-xl font-bold text-gob-primary mb-3 leading-tight">
										<a
											href={`/noticias/${noticia.slug}`}
											class="hover:text-gob-accent transition"
										>
											{noticia.data.title}
										</a>
									</h3>
									<p class="text-gray-600 text-sm line-clamp-3 mb-4">
										{noticia.data.excerpt}
									</p>
								</div>
							</article>
						))
					}
				</div>
			</div>

			<div class="text-center md:hidden mt-8">
				<a
					href="/noticias"
					class="btn-primary inline-block bg-gob-primary text-white py-3 px-8 rounded-full font-bold"
				>
					Ver todas las noticias
				</a>
			</div>
		</div>
	</section>
</Layout>
