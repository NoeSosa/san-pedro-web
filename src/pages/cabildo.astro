---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cabildo Municipal | San Pedro Huamelula">
    <div class="bg-gob-primary text-white py-16 text-center">
        <h1 class="text-4xl font-bold">H. Ayuntamiento Constitucional</h1>
        <p class="mt-2 text-gob-accent text-lg">
            Servidores públicos comprometidos con el pueblo
        </p>
    </div>

    <section class="py-20 bg-gob-light">
        <div class="container mx-auto px-6">
            <div class="flex flex-col items-center mb-16">
                <div
                    class="bg-white p-8 rounded-xl shadow-xl border-t-8 border-gob-accent text-center max-w-lg w-full transform hover:scale-105 transition duration-300"
                >
                    <div
                        class="w-32 h-32 bg-gray-200 rounded-full mx-auto mb-4 overflow-hidden border-4 border-white shadow-md"
                    >
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Presidente"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div
                        class="text-sm font-bold text-gob-accent uppercase tracking-widest mb-1"
                    >
                        Presidente Municipal
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800">
                        C. [Nombre del Presidente]
                    </h3>
                    <p class="text-gray-500 mt-2 italic">Gestión 2025 - 2027</p>
                </div>
            </div>

            <h3 class="text-2xl font-bold text-gob-primary text-center mb-8">
                Cuerpo de Regidores
            </h3>
            <div
                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto"
            >
                <div
                    class="bg-white p-6 rounded-lg shadow hover:shadow-md transition border-l-4 border-gob-primary flex items-center gap-4"
                >
                    <div
                        class="w-16 h-16 bg-gray-200 rounded-full flex-shrink-0 overflow-hidden"
                    >
                        <img
                            src="https://via.placeholder.com/100"
                            alt="Foto"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div>
                        <div
                            class="text-xs font-bold text-gob-accent uppercase"
                        >
                            Sindicatura
                        </div>
                        <h4 class="font-bold text-lg text-gob-primary">
                            Lic. [Nombre]
                        </h4>
                    </div>
                </div>

                <div
                    class="bg-white p-6 rounded-lg shadow hover:shadow-md transition border-l-4 border-gob-primary flex items-center gap-4"
                >
                    <div
                        class="w-16 h-16 bg-gray-200 rounded-full flex-shrink-0 overflow-hidden"
                    >
                        <img
                            src="https://via.placeholder.com/100"
                            alt="Foto"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div>
                        <div
                            class="text-xs font-bold text-gob-accent uppercase"
                        >
                            Reg. Hacienda
                        </div>
                        <h4 class="font-bold text-lg text-gob-primary">
                            C. [Nombre]
                        </h4>
                    </div>
                </div>

                <div
                    class="bg-white p-6 rounded-lg shadow hover:shadow-md transition border-l-4 border-gob-primary flex items-center gap-4"
                >
                    <div
                        class="w-16 h-16 bg-gray-200 rounded-full flex-shrink-0 overflow-hidden"
                    >
                        <img
                            src="https://via.placeholder.com/100"
                            alt="Foto"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div>
                        <div
                            class="text-xs font-bold text-gob-accent uppercase"
                        >
                            Reg. Salud
                        </div>
                        <h4 class="font-bold text-lg text-gob-primary">
                            Dr. [Nombre]
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
