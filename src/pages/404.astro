---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Página no encontrada">
    <div
        class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4"
    >
        <h1 class="text-9xl font-bold text-gob-accent opacity-50">404</h1>
        <h2 class="text-3xl font-bold text-gob-primary mt-4">
            Página no encontrada
        </h2>
        <p class="text-gray-600 mt-2 mb-8">
            Lo sentimos, la página que buscas no existe o se ha movido.
        </p>
        <a
            href="/"
            class="bg-gob-primary text-white px-6 py-3 rounded-lg hover:bg-gob-primary/90 transition"
        >
            Volver al Inicio
        </a>
    </div>
</Layout>
